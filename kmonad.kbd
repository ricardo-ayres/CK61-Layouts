(defcfg
  input (device-file "$KBD_DEV")
  output (uinput-sink "Kmonad")
  fallthrough true
)

(defsrc
  esc  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  caps a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft z    x    c    v    b    n    m    ,    .    /    rsft
  lctl lmet lalt           spc                 ralt cmp  rctl
)

(defalias
  ;; sticky keys
  ss (around-next sft)
  sc (around-next ctl)
  sm (around-next met)
  sla (around-next lalt)
  sra (around-next ralt)

  ;; multi-mods
  ms (tap-next @ss sft)
  mc (tap-next @sc ctl)
  mm (tap-next @sm met)
  mla (tap-next @sla lalt)
  mra (tap-next @sra ralt)

  ;; layer manipulation
  rst (layer-switch default)

  lt1 (layer-toggle nav)
  lt2 (layer-toggle num)
  lt3 (layer-toggle sym)
  lt4 (layer-toggle fnx)
  lt5 (layer-toggle sjm)

  ls1 (layer-switch nav)
  ls2 (layer-switch num)
  ls3 (layer-switch sym)
  ls4 (layer-switch fnx)
  ls5 (layer-switch sjm)

  ln1 (layer-next nav)
  ln2 (layer-next num)
  ln3 (layer-next sym)
  ln4 (layer-next fnx)
  ln5 (layer-next sjm)

  ;; function keys
  fn1 (tap-next esc @lt1)
  fn2 (tap-next @ln2 @lt2)
  fn5 (tap-next-release spc @lt5)

  ;; convenience shortcuts
  ;; general useful
  cz C-z
  cx C-x
  cc C-c
  cv C-v

  ;; web useful
  cw C-w
  cr C-r
  ct C-t
  ca C-a
  tp C-S-tab
  tn C-tab
  cf C-f

  ;; dwm
  msq M-S-q
  tag (around-next (around met sft))
)
 
;; default layer
(deflayer default
  grv  _    _    _    _    _    _    _    _    _    _    _    _    _
  @fn2 _    _    _    _    _    _    _    _    _    _    _    _    _
  @fn1 _    _    _    _    _    _    _    _    _    _    _    _
  @ms  _    _    _    _    _    _    _    _    _    _    _
  @mc  @mm  @mla           @fn5                @mra _    _
)
 
